<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx/fxml/1"
            fx:controller="com.metropaths.MetroMapController">

    <children>
        <!-- Карта -->
        <Pane fx:id="metroPathsVBox" />

        <!-- Панель с инфо -->
        <VBox fx:id="infoPanel"
              styleClass="info-panel"
              spacing="5"
              alignment="TOP_RIGHT"
              AnchorPane.topAnchor="10"
              AnchorPane.rightAnchor="10"
              prefWidth="220"
              prefHeight="100"      
              minWidth="220"
              maxWidth="220"
              minHeight="100"
              maxHeight="100">

            <Label fx:id="startStationLabel"
                   text="Отправная: -"
                   maxWidth="200"
                   wrapText="true"
                   style="-fx-font-weight: bold;" />

            <Label fx:id="finishStationLabel"
                   text="Конечная: -"
                   maxWidth="200"
                   wrapText="true"
                   style="-fx-font-weight: bold;" />
            <Label fx:id="timeLabel"
                   text="Время в пути: "
                   maxWidth="200"
                   wrapText="true"
                   style="-fx-font-weight: bold;" />
            <Button text="Сброс" onAction="#onResetClick" maxWidth="80"/>
        </VBox>
    </children>

</AnchorPane>
